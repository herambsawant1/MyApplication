<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/editProfileMonday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="M"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/editProfileTuesday"
        android:layout_marginRight="6dp" />
    <Button
        android:id="@+id/editProfileThursday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="TR"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/editProfileWednesday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="W"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/editProfileThursday"
        android:layout_marginRight="6dp" />
    <Button
        android:id="@+id/editProfileTuesday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="TU"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/editProfileWednesday"
        android:layout_marginRight="6dp" />
    <Button
        android:id="@+id/editProfileFriday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="F"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/editProfileThursday"
        android:layout_marginLeft="6dp" />
    <Button
        android:id="@+id/editProfileSaturday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="SA"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintLeft_toRightOf="@+id/editProfileFriday"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/editProfileSunday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:text="SU"
        android:textColor="@drawable/button_white_text"
        android:background="@drawable/button_rounded_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/editProfileSaturday"
        android:layout_marginLeft="6dp" />

</android.support.constraint.ConstraintLayout>