<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/editProfileMonday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="M"
        android:textOn="M"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/editProfileTuesday"
        android:layout_marginRight="6dp" />
    <ToggleButton
        android:id="@+id/editProfileThursday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="TR"
        android:textOn="TR"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <ToggleButton
        android:id="@+id/editProfileWednesday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="W"
        android:textOn="W"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/editProfileThursday"
        android:layout_marginRight="6dp" />
    <ToggleButton
        android:id="@+id/editProfileTuesday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="TU"
        android:textOn="TU"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/editProfileWednesday"
        android:layout_marginRight="6dp" />
    <ToggleButton
        android:id="@+id/editProfileFriday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="F"
        android:textOn="F"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/editProfileThursday"
        android:layout_marginLeft="6dp" />
    <ToggleButton
        android:id="@+id/editProfileSaturday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="SA"
        android:textOn="SA"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintLeft_toRightOf="@+id/editProfileFriday"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
    <ToggleButton
        android:id="@+id/editProfileSunday"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:textOff="SU"
        android:textOn="SU"
        android:textColor="@drawable/toggle_text_color"
        android:background="@drawable/toggle_image_states"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/editProfileSaturday"
        android:layout_marginLeft="6dp" />


</android.support.constraint.ConstraintLayout>